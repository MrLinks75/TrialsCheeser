<Window x:Class="TrialsCheeser.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TrialsCheeser"
        mc:Ignorable="d"
        Title="Trials Cheeser" Height="130.73" Width="256.101" ResizeMode="NoResize">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition Height="2*"/>
        </Grid.RowDefinitions>
        <Label Content="Other Host's IP" Grid.Row="0"/>
        <Button Name="DevicesButton" Content="Devices" Click="DevicesButton_Click" Margin="2" Grid.Row="0" HorizontalAlignment="Right"/>
        <TextBox Name="HostIP" PreviewTextInput="HostIP_PreviewTextInput" DataObject.Pasting="HostIP_Pasting" TextWrapping="NoWrap" MaxLength="15" Grid.Row="1" Margin="2 0" VerticalContentAlignment="Center" Background="LightCoral" TextChanged="HostIP_TextChanged"/> <!-- LightCoral | LightGreen -->
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition Width="4*"/>
            </Grid.ColumnDefinitions>
            <Ellipse Name="MatchCircle" Fill="Red" Stroke="Black" StrokeThickness="2" Margin="4 3" Grid.Column="0"/> <!-- Red | Orange | Lime -->
            <Label Name="MatchLabel" Content="Not matched." VerticalAlignment="Center" Grid.Column="1"/> <!-- Not matched. | Skimming... | Matched! -->
        </Grid>
    </Grid>
</Window>
